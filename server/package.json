{
  "name": "server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --env-file=.env.development run --watch index.ts",
    "build": "bun build index.ts --target bun --outdir ./out",
    "serve": "bun --env-file=.env.production run index.ts",
    "start": "bun run index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "hono": "^4.10.7"
  }
}
