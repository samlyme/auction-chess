    // - verbatimModuleSyntax: true
    // - moduleDetection: force
    // - noEmit: true
    // - strict: true
    // - skipLibCheck: true
    // - noUnusedLocals: true (now enforced!)
    // - noUnusedParameters: true (now enforced!)
    // - noFallthroughCasesInSwitch: true
  },
  "include": ["vite.config.ts"]
}
