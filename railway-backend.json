{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": ["backend/**", "game/**"],
    "buildCommand": "cd backend && uv sync --locked --no-dev"
  },
  "deploy": {
    "preDeployCommand": [],
    "startCommand": "fastapi run --app app --host :: --port 8000"
  }
}