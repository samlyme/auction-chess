{
  "name": "auction-chess",
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "format": "prettier --write ./**",

    "dev:client": "bun run --filter web dev",
    "build:client": "bun run --filter web build",
    "preview:client": "bun run --filter web preview",
    "publish:client": "cd clients/web && wrangler deploy",
    "deploy:client": "bun run build:client && bun run publish:client",

    "dev:server": "bun run --filter server dev",
    "build:server": "bun run --filter server build",
    "start:server:local": "bun run --filter server start:local",
    "start:server:prod": "bun run --filter server start:prod",
    "start:server": "bun run --filter server start",

    "deploy:supabase": "supabase db push && supabase config push",

    "build": "bun run build:client && bun run build:server"
  },
  "workspaces": [
    "shared",
    "server",
    "clients/web"
  ],
  "dependencies": {
    "hono": "^4.11.1"
  }
}
